<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Spotter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary color scheme -->
    <item name="colorPrimary">@color/white</item> <!-- active navbar icons -->
    <item name="colorPrimaryVariant">@color/grey_4</item>  <!-- color for background -->
    <item name="colorOnPrimary">@color/grey_1</item> <!-- Text on primary background -->

    <!-- Secondary color scheme -->
    <item name="colorSecondary">@color/black</item>
    <item name="colorSecondaryVariant">@color/light_purple</item>  <!-- button bg color -->
    <item name="colorOnSecondary">@color/black</item> <!-- Text on secondary background -->

    <!-- Background color -->
    <item name="android:windowBackground">@color/navbar_color</item>

    <!-- Text colors -->
    <item name="android:textColorPrimary">@color/grey_1</item> <!-- Primary text color -->
    <item name="android:textColorSecondary">@color/grey_2</item> <!-- Secondary text color -->
</style>
</resources>