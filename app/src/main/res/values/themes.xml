<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spotter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color scheme -->
        <item name="colorPrimary">@color/white</item> <!-- barva active elementov v navbaru -->
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Text on primary background -->

        <!-- Secondary color scheme -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Text on secondary background -->

        <!-- Background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Primary text color -->
        <item name="android:textColorSecondary">@color/grey_3</item> <!-- Secondary text color -->
    </style>
</resources>